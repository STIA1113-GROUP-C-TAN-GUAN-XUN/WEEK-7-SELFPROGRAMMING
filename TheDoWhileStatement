package selfProgramming;

public class TheDoWhileStatement {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int i=0;
		
			do {
				System.out.println(i);
				i++;
			}while(i<=6);
		System.out.println("The do...while loops will at least execute once");
		
		int sum=0, number=2;
		
			do{
				sum+=number;
				number+=5;
				System.out.println("Sum: "+sum);
			}while (number<=10);
		System.out.println("The sum is greater than 10 now");
	}

}
